        type: http
        url: https://sub.2to.fun/getprofile?name=clash/nodecat&token=daf67d44
        interval: 3600
        path: ./profiles/provider/nodecat.yaml
        health-check:
            enable: true
            interval: 600
            url: http://www.gstatic.com/generate_204
    to:
        type: http
        url: https://sub.2to.fun/getprofile?name=clash/toto&token=daf67d44
        interval: 3600
        path: ./profiles/provider/to.yaml
        health-check:
            enable: true
            interval: 600
